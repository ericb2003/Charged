<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="battery_status_switch"
        android:title="@string/pref_title_battery_status"
        android:summary="@string/pref_description_battery_status"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="resume_restart_switch"
        android:title="@string/pref_title_resume_on_restart"
        android:summary="@string/pref_description_resume_on_restart"
        android:defaultValue="true" />

    <ListPreference
        android:key="alert_type_setting"
        android:title="@string/pref_title_alerttype"
        android:summary="@string/pref_description_alerttype"
        android:entries="@array/pref_alerttype_titles"
        android:entryValues="@array/pref_alerttype_values"
        android:defaultValue="2"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

